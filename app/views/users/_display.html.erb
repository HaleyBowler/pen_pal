<a><%= image_tag user.avatar.url(:medium), :class =>'profile_pic' %></a>
<div>
  <h4 class="profile-heading"><%= user.first_name %>  <%= user.last_name %><br/><small> <%= user.location %></small></h4>
  <% user.get_languages.each do |language| %>
  <span class="label label-primary language-tags"><%= language %></span>
  <% end %><br/>
  <div class="About Me"><%= user.about_me %></div>
  <a><%= link_to "Message This User", new_message_path(:to => user.id), class: "btn btn-large btn-warning message-button " %></a>
</div>

    

