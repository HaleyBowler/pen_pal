<div class="media">
    <a class="pull-left" href="#">
       <%= image_tag user.avatar.url(:thumb) %>
   </a>
   <div class="media-body">
       <h4 class="media-heading"><%= user.first_name %>  <%= user.last_name %><small> <%= user.location %></small></h4>
       <hr style="margin:8px auto">
       <% user.get_languages.each do |language| %>
       <span class="label label-default"><%= language %></span>
       <% end %><br/>

       <div class="About Me"><%= user.about_me %></div>
       <a><%= link_to "Message This User", new_message_path(:to => user.id), class: "btn btn-large btn-primary message-button" %></a>
   </div>
</div>
    

